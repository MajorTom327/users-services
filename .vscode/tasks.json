{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "yarn build",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "env": {
          "NODE_ENV": "production"
        }
      }
    },
    {
      "label": "dev",
      "type": "process",
      "command": "yarn",
      "args": ["dev"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc-watch"
      ],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "env": {
          "NODE_ENV": "development"
        },
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
